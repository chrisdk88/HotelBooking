@page "/login"
@inject HttpClient Http
@using System.Net.Http.Json
@using Models
@inject Microsoft.AspNetCore.Components.NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<PageTitle>Login</PageTitle>

<h3>Login</h3>

<section class="text-center text-lg-start">


    <div class="row g-0 d-flex align-items-center">
        <div class="col-lg-4 d-none d-lg-flex">
            <img src="https://estate.mindworking.eu/resources/shops/N270228/cases/1834/casemedia/images/4398d80275fffeacce56607205c01d54/customsize.jpg?deviceid=xxx&bgcolor=ffffff&dpi=72&jq=70&tp=rgb&fo=1&w=2100"
                 alt="Trendy Pants and Shoes" class="w-100 rounded-t-5 rounded-tr-lg-0 rounded-bl-lg-5" />
        </div>

        <div class="col-lg-8">
            <div class="card-body py-5 px-md-5">
                <form>
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <input type="email" id="email" class="form-control" @bind="LoginUser.email" />
                        <label class="form-label" for="email">Email address</label>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-4">
                        <input type="password" id="password" class="form-control" @bind="LoginUser.password" />
                        <label class="form-label" for="password">Password</label>
                    </div>

                    <div class="row mb-4">
                        <div class="col">
                            <a href="/signup">Create an account</a>
                        </div>
                    </div>

                    <!-- Login button -->
                    <button type="button" class="btn btn-primary btn-block mb-4"@onclick="HandleLogin">
                        Login
                    </button>
                </form>
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger">
                        @errorMessage
                    </div>
                }
           </div>
        </div>
    </div>
</section>


